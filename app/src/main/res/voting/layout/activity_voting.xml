<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:textScaleX="0.97"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40.5dp"
            android:textColor="#000000"
            android:text="VOTING"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"></TextView>

        <ImageView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/close"
            android:src="@drawable/home_btn"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/box_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:textScaleX="0.9"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#383838"
            android:text="Please Select the Answer."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"></TextView>



        <TextView
            android:fontFamily="sans-serif-light"
            android:text="NO.1"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/VotingButton1"
            android:background="@drawable/num"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:text="NO.2"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/VotingButton2"
            android:background="@drawable/num"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:text="NO.3"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/VotingButton3"
            android:background="@drawable/num"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:text="NO.4"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/VotingButton4"
            android:background="@drawable/num"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:text="NO.5"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/VotingButton5"
            android:background="@drawable/num"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />


    </LinearLayout>

    <com.m2comm.voting.BottomMenu
        android:id="@+id/bottommenu"
        android:layout_width="match_parent"
        android:layout_height="65dp">

    </com.m2comm.voting.BottomMenu>

</LinearLayout>