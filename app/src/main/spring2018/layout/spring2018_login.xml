<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/spring2018_bg"
    android:id="@+id/bg"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.m2comm.module.MyLinearLayout
        app:h="50"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.m2comm.module.MixImage
            app:mixcolor="#313131"
            app:w="50"
            app:h="50"
            android:id="@+id/back"
            android:src="@drawable/btn_d_back1"
            android:layout_height="50dp"
            android:layout_width="50dp">

        </com.m2comm.module.MixImage>

    </com.m2comm.module.MyLinearLayout>


    <com.m2comm.module.MixImage
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        app:w="193"
        app:h="209"
        android:src="@drawable/spring2018_title"
        android:layout_height="209dp"
        android:layout_width="193dp">

    </com.m2comm.module.MixImage>


    <LinearLayout
        android:background="@drawable/txt_q1"
        android:id="@+id/text1"
        android:layout_width="326dp"
        android:layout_height="100dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_width="326dp"
        android:layout_height="160dp">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_yes2"
            android:id="@+id/yes"
            android:layout_width="124.5dp"
            android:layout_height="125dp">
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_no2"
            android:id="@+id/no"
            android:layout_width="124.5dp"
            android:layout_height="125dp">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll2"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="326dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/input_mail"
            android:layout_width="280dp"
            android:layout_height="39dp">
            <EditText
                android:id="@+id/name"
                android:background="#00ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="Enter your Name"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/input_mail"
            android:layout_width="280dp"
            android:layout_height="39dp">
            <EditText
                android:id="@+id/email"
                android:background="#00ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="Enter your Phone Number"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:text="LOGIN"
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>


</LinearLayout>
